{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "out",
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "tsBuildInfoFile": "out/client.tsbuildinfo",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node","vscode"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["server/**","node_modules"]
}
