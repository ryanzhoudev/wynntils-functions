generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/client"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model wynntilsargument {
    id           Int               @id @default(autoincrement())
    name         String            @db.VarChar(255)
    description  String
    required     Boolean
    functionid   Int?
    type         type
    defaultvalue String?           @db.VarChar(255)
    functions    wynntilsfunction? @relation(fields: [functionid], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model wynntilsfunction {
    id          Int                @id @default(autoincrement())
    name        String             @unique @db.VarChar(255)
    description String
    aliases     String[]           @db.VarChar(255)
    returntype  type
    arguments   wynntilsargument[]
}

enum type {
    Integer
    CappedValue
    Number
    String
    Boolean
    Double
    Location
    NamedValue
    Long
    RangedValue
}
